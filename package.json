{
  "name": "angular-timers",
  "version": "0.1.21",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --configuration production --verbose",
    "watch": "ng build --watch --configuration development --verbose",
    "test": "ng test",
    "serve:ssr:angular-timers": "node dist/angular-timers/server/server.mjs",
    "server": "node src/server/server.js",
    "dev": "concurrently \"ng serve\" \"npm run server\"",
    "generate-sitemap": "node scripts/generate-sitemap.js",
    "generate-build-info": "node scripts/generate-build-info.js",
    "increment-version": "node scripts/increment-version.js",
    "increment-version:patch": "node scripts/increment-version.js patch",
    "increment-version:minor": "node scripts/increment-version.js minor",
    "increment-version:major": "node scripts/increment-version.js major",
    "version": "npm run increment-version",
    "prebuild": "npm run increment-version && npm run generate-sitemap && npm run generate-build-info",
    "build:scully": "npm run build && npx scully --project angular-timers",
    "serve:scully": "npx scully serve --project angular-timers",
    "scully": "npx scully --project angular-timers"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.13",
    "@angular/cdk": "^18.2.14",
    "@angular/common": "^18.2.13",
    "@angular/compiler": "^18.2.13",
    "@angular/core": "^18.2.13",
    "@angular/forms": "^18.2.13",
    "@angular/material": "^18.2.14",
    "@angular/platform-browser": "^18.2.13",
    "@angular/platform-browser-dynamic": "^18.2.13",
    "@angular/platform-server": "^18.2.13",
    "@angular/router": "^18.2.13",
    "@angular/service-worker": "^18.2.13",
    "@angular/ssr": "^18.2.20",
    "@scullyio/init": "^2.1.21",
    "express": "^4.18.2",
    "ngx-sitemap": "^1.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.20",
    "@angular/cli": "^18.2.20",
    "@angular/compiler-cli": "^18.2.13",
    "@angular/pwa": "^18.2.20",
    "@scullyio/scully": "^2.1.41",
    "@scullyio/scully-plugin-puppeteer": "^2.1.41",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "concurrently": "^9.2.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.4.2",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
